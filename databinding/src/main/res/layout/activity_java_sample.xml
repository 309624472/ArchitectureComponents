<?xml version="1.0" encoding="utf-8"?>
<layout>
	
	<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	                                             xmlns:app="http://schemas.android.com/apk/res-auto"
	                                             xmlns:tools="http://schemas.android.com/tools"
	                                             android:layout_width="match_parent"
	                                             android:layout_height="match_parent"
	                                             tools:context=".java.JavaSampleActivity">
		
		<Button
				android:id="@+id/toTest1Btn"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="toTest1Activity"
				android:textAllCaps="false"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>
		
		<Button
				android:id="@+id/toTest2Btn"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="toTest2Activity"
				android:textAllCaps="false"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/toTest1Btn"/>
		
		<Button
				android:id="@+id/toTest3Btn"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="toTest3Activity"
				android:textAllCaps="false"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/toTest2Btn"/>
		
		<Button
				android:id="@+id/toTest4Btn"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="toTest4Activity"
				android:textAllCaps="false"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/toTest3Btn"/>
	</android.support.constraint.ConstraintLayout>
</layout>
